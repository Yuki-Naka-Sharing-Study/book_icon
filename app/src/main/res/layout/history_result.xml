<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pref_history_name"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="都道府県の履歴"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/temp_history_text"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="気温の履歴"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pref_history_name" />

    <TextView
        android:id="@+id/weather_history_text"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="天気の履歴"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/temp_history_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>